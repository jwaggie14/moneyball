<div class="page-header">
  <h1>
    Leagues
    <a href="/leagues/new" class="btn btn-lg btn-success">New League</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Num teams</th>
        <th>Scoring</th>
        <th>User first pick</th>
        <th>League name</th>
        <th>Actions</th>
      </tr>

      <% @leagues.each do |league| %>
      <tr>
        <td>
          <% if league.user.present? %>
            <a href="/users/<%= league.user.id %>">
              <%= league.user.email %>
            </a>
          <% end %>
        </td>
        <td><%= league.num_teams %></td>
        <td><%= league.scoring %></td>
        <td><%= league.user_first_pick %></td>
        <td><%= league.league_name %></td>
        <td>
          <a href="/leagues/<%= league.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == league.user %>
            <a href="/leagues/<%= league.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_league/<%= league.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @leagues, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
